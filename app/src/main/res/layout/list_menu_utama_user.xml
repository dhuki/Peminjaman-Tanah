<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/btn_cardview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="3dp"
        app:cardCornerRadius="1dp"
        android:foreground="?android:attr/selectableItemBackground"> // What is that foreground ???

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="30dp">

            <ImageView
                android:id="@+id/wv_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tf_keterangan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_toRightOf="@+id/wv_image"
                android:fontFamily="@font/yu_gothic_b" />

            <TextView
                android:id="@+id/tf_subKeterangan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tf_keterangan"
                android:layout_marginLeft="20dp"
                android:layout_toRightOf="@+id/wv_image"
                android:fontFamily="@font/yu_gothic_li" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>