<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ic_background_24px"
    android:orientation="vertical"
    tools:context=".Activity.Registration">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="60dp"
        android:src="@drawable/ic_kota_bandung_24px" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/century_gothic"
        android:gravity="center"
        android:shadowColor="#000000"
        android:shadowDx="1"
        android:shadowDy="1"
        android:shadowRadius="2"
        android:text="REGISTRASI"
        android:textColor="#FFFFFF"
        android:textSize="30sp" />

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="15dp"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/ic_rounded_form_username_not_editable">

            <TextView
                android:id="@+id/tf_nomor_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/ubuntu_medium"
                android:paddingLeft="20dp"
                android:paddingTop="7dp"
                android:text="Nomor Sewa Tanah"
                android:textColor="#A2A2A2"
                android:textSize="11sp" />

            <TextView
                android:id="@+id/tf_nomor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tf_nomor_title"
                android:fontFamily="@font/ubuntu_light"
                android:paddingLeft="20dp"
                android:paddingTop="3dp"
                android:text="Nomor Sewa Tanah"
                android:textColor="#A2A2A2"
                android:textSize="14sp" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#FFE9E9E9">

            <TextView
                android:id="@+id/tf_nama_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/ubuntu_medium"
                android:paddingLeft="20dp"
                android:paddingTop="7dp"
                android:text="Nama Pemakai"
                android:textColor="#A2A2A2"
                android:textSize="11sp" />

            <TextView
                android:id="@+id/tf_nama"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tf_nama_title"
                android:fontFamily="@font/ubuntu_light"
                android:paddingLeft="20dp"
                android:paddingTop="3dp"
                android:text="Nama Pemakai"
                android:textColor="#A2A2A2"
                android:textSize="14sp" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp" />

        <EditText
            android:id="@+id/edtx_new_email"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#FFFF"
            android:fontFamily="@font/ubuntu_light"
            android:hint="Input New Email"
            android:paddingLeft="20dp"
            android:textColor="#000000"
            android:textColorHint="#A2A2A2"
            android:textSize="14sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp" />

        <EditText
            android:id="@+id/edtx_new_password"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/ic_rounded_form_password"
            android:fontFamily="@font/ubuntu_light"
            android:hint="Input New Password"
            android:inputType="textPassword"
            android:paddingLeft="20dp"
            android:textColor="#000000"
            android:textColorHint="#A2A2A2"
            android:textSize="14sp" />

        <Button
            android:id="@+id/btn_sign_up"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="15dp"
            android:background="@drawable/ic_button"
            android:fontFamily="@font/ubuntu_medium"
            android:text="Sign Up"
            android:textColor="#FFFFFF"
            android:textSize="15sp" />

    </LinearLayout>

</LinearLayout>