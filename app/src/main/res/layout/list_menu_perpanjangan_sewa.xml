<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp">

        <TextView
            android:id="@+id/tf_judul_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/yu_gothic_b"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tf_sub_judul"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tf_judul_title"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="5dp"
            android:layout_marginRight="5dp"
            android:layout_toLeftOf="@+id/btn_tambah"
            android:fontFamily="@font/yu_gothic_li"
            android:textSize="12sp" />


        <ImageButton
            android:id="@+id/btn_tambah"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_below="@+id/tf_judul_title"
            android:layout_alignParentRight="true"
            android:background="@drawable/ic_rounded_button"
            android:src="@drawable/ic_plus_icon" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#d4d4d4" />

</LinearLayout>