<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ic_background_24px"
    android:orientation="vertical">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="60dp"
        android:src="@drawable/ic_kota_bandung_24px" />

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="60dp"
        android:orientation="vertical">

        <EditText
            android:id="@+id/edtx_username"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@drawable/ic_rounded_form_username"
            android:fontFamily="@font/ubuntu_light"
            android:hint="Nomor Sewa Tanah"
            android:paddingLeft="20dp"
            android:textColor="#000000"
            android:textColorHint="#A2A2A2"
            android:textSize="14sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp" />

        <EditText
            android:id="@+id/edtx_password"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@drawable/ic_rounded_form_password"
            android:fontFamily="@font/ubuntu_light"
            android:hint="Password"
            android:inputType="textPassword"
            android:paddingLeft="20dp"
            android:textColor="#000000"
            android:textColorHint="#A2A2A2"
            android:textSize="14sp" />

        <Button
            android:id="@+id/btn_login"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="15dp"
            android:background="@drawable/ic_button"
            android:fontFamily="@font/ubuntu_medium"
            android:text="LOG IN"
            android:textColor="#FFFFFF"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tf_account"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="10dp"
            android:clickable="true"
            android:fontFamily="@font/ubuntu_light"
            android:text="Doesn't have an account ?"
            android:textColor="#FFFFFF"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/tf_forgot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="7dp"
            android:clickable="true"
            android:fontFamily="@font/ubuntu_light"
            android:text="Forgot Password ?"
            android:textColor="#FFFFFF"
            android:textSize="10sp" />

    </LinearLayout>

</LinearLayout>